<resources>

    <style name="Base.Theme.C001apk" parent="Theme.Material3.DynamicColors.Light.Rikka">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryVariant">@color/primary_dark_light_light_status_bar</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Preference title -->
        <item name="android:textAppearanceListItem">?textAppearanceSubtitle1</item>
        <!-- Preference category title -->
        <item name="android:colorAccent">?colorPrimary</item>
        <!-- Preference switch -->
        <item name="android:colorControlActivated">?colorPrimary</item>
    </style>

    <style name="Theme.C001apk" parent="Base.Theme.C001apk">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Rikka.Material3.Mod</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="PreferenceThemeOverlay.Rikka.Material3.Mod" parent="@style/PreferenceThemeOverlay">
        <item name="preferenceCategoryTitleTextAppearance">
            @style/TextAppearance.Rikka.CategoryTitle.Material3
        </item>
        <item name="preferenceCategoryTitleTextColor">?colorPrimary</item>
        <item name="preferenceCategoryStyle">@style/Preference.Rikka.Category.Material3.Mod</item>
        <item name="preferenceStyle">@style/Preference.Rikka.Material3</item>
        <item name="checkBoxPreferenceStyle">@style/Preference.Rikka.CheckBoxPreference.Material3
        </item>
        <item name="dialogPreferenceStyle">@style/Preference.Rikka.Material3</item>
        <item name="editTextPreferenceStyle">@style/Preference.Rikka.EditTextPreference.Material3
        </item>
        <item name="dropdownPreferenceStyle">@style/Preference.Rikka.DropdownPreference.Material3
        </item>
        <item name="switchPreferenceStyle">@style/Preference.Rikka.SwitchPreference.Material3</item>
        <item name="seekBarPreferenceStyle">@style/Preference.Rikka.SeekbarPreference.Material3
        </item>
        <item name="simpleMenuPreferenceStyle">
            @style/Preference.Rikka.SimpleMenuPreference.Material3
        </item>
        <item name="materialSwitchPreferenceStyle">@style/Preference.Rikka.MateriaSwitchPreference
        </item>
    </style>

    <style name="Preference.Rikka.Category.Material3.Mod" parent="@style/Preference.Category.Material">
        <item name="android:layout">@layout/m3_preference_category</item>
        <item name="iconSpaceReserved">false</item>
        <item name="allowDividerAbove">true</item>
        <item name="allowDividerBelow">true</item>
    </style>

    <style name="iconMiniScrollCardRadius">
        <item name="cornerSize">18dp</item>
    </style>

    <style name="Widget.Material3.TabLayout.OnSurface.Trans" parent="Base.Widget.Material3.TabLayout.OnSurface">
        <item name="android:background">@drawable/tab_background_trans</item>
    </style>

    <style name="Widget.Material3.TabLayout.OnSurface.Mod" parent="Base.Widget.Material3.TabLayout.OnSurface">
        <item name="android:background">@drawable/tab_background</item>
    </style>

    <style name="searchTopicRadius">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="textScrollImgRadius">
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
    </style>

    <style name="Theme.User" parent="Theme.Material3.DynamicColors.Light.Rikka">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="cardBG">
        <item name="android:background">@color/cover</item>
    </style>

    <style name="UserTextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.About" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#6750A4</item>
        <item name="colorPrimaryDark">#6750A4</item>
    </style>

</resources>